{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "C/C++: gcc arquivo de build ativo",
            "type": "shell",
            "command": "/usr/bin/gcc",
            "args": [
                "-g",
                "${workspaceFolder}/app/main/main.c",
                "${workspaceFolder}/auth/login.c",
                "${workspaceFolder}/app/screens/tela-principal.c",
                "${workspaceFolder}/app/screens/tela-menu-industrias.c",
                "${workspaceFolder}/app/screens/tela-menu-insumos.c",
                "${workspaceFolder}/app/screens/tela-menu-relatorios.c",
                "${workspaceFolder}/app/_industrias/repository_industrias.c",
                "${workspaceFolder}/app/_insumos/repositorio_insumos.c",
                "${workspaceFolder}/db/db.c",
                "-o",
                "${workspaceFolder}/dist/main",
                "-lsqlite3",
                "-lssl",
                "-lcrypto"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Tarefa gerada pelo debugger."
        }
    ]
}